# JGPT Unified Configuration

# Database
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=jgpt

# API
SECRET_KEY=jgpt_super_secret_key_change_me_in_prod
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000
OLLAMA_BASE_URL=http://host.docker.internal:11434

# Web
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000

# Feature Flags
KB_WATCH=0

# RAG Configuration
CHUNK_SIZE=300            # Target chunk size in characters
CHUNK_OVERLAP=100         # Overlap between chunks for context continuity
EMBED_PROVIDER=ollama      # 'ollama' or external providers
OLLAMA_EMBED_MODEL=mxbai-embed-large # We recommend mxbai-embed-large or nomic-embed-text
RERANK=1                   # Set to 1 to enable LLM-based reranking (highly recommended for precision)
RERANK_MODEL=llama3.2     # Model used for reranking
VISION_MODEL=llava:7b      # Vision model used for image captioning (e.g., llava:7b, llava-phi3)
